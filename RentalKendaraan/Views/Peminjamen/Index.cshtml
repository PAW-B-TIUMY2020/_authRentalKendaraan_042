@model PaginatedList<RentalKendaraan_042.Models.Peminjaman>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Tambah Data Baru</a>
</p>

@using (Html.BeginForm("Index", "Peminjaman", FormMethod.Get))
{
    <p>
        Ketersediaan: @Html.DropDownList("ktsd", "Pilih Peminjaman")
        Cari Data : @Html.TextBox("searchString")
        <input type="submit" value="Filter" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.TglPeminjaman)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-routeFilter="@ViewData["CurrentFilter"]">Tanggal Peminjaman</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Biaya)*@
                @Html.DisplayName("Biaya")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.IdCustomerNavigation)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-routeFilter="@ViewData["CurrentFilter"]">Nama Customer</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.IdJaminanNavigation)*@
                @Html.DisplayName("IdJaminanNavigation")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.IdKendaraanNavigation)*@
                @Html.DisplayName("IdKendaraanNavigation")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TglPeminjaman)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Biaya)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCustomerNavigation.IdCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdJaminanNavigation.IdJaminan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdKendaraanNavigation.IdKendaraan)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPeminjaman"><i class="fas fa-pen-alt"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdPeminjaman"><i class="fas fa-list-alt"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdPeminjaman"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disable" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Privious
</a>

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
